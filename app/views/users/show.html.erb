<div class="container">
  <div class="row">
    <!--パーシャル-->
      <%= render "users/side", user: @user, new_book: @new_book %>

    <div class="right col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <%# @books.each do |book| %>
            <tr>
              <td><%#= link_to book.title, book_path(book.id) %></td>
              <td><%#= book.body %></td>
            </tr>
            <%# end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

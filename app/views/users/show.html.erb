<div class="container">
  <div class="row">
    <!--パーシャル-->
    <div class="left">
      <%= render "users/side", user: @user %>
    </div>

    <div class="right">
      <h2>Books</h2>
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <%# @books.each do |book| %>
            <tr>
              <td><%#= link_to book.title, book_path(book.id) %></td>
              <td><%#= book.body %></td>
            </tr>
            <%# end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

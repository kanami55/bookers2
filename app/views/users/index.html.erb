<div class="container">
  <div class="row">
    <!--パーシャル-->
    <%= render "users/side", user: @user, new_book: @new_book %>
    <div class="right col-md-8 offset-md-1">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: "10x10" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

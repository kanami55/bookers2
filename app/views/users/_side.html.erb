<div class="left col-md-3">
  <h2>User info</h2>
  <table class="table">
    <tboby>
      <tr>
      <th><%= image_tag user.get_profile_image, size: '50x50' %></th>
      <th></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    </tboby>
  </table>

    <%= link_to edit_user_path(user.id), method: :get, class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user"></i>
    <% end %>

  <h2 class="mt-4">New book</h2>
    <%= form_with model: new_book, local: true do |f| %>
  <div class="form-group">
    <label>Title</label><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Opinion</label><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-sm btn-primary" %>
  </div>
    <% end %>
</div>

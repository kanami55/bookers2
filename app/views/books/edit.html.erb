<h2>Editing Book</h2>
<%= form_with model: @book, local: true do |f| %>
<%= f.lable :title %>
<%= f.text_field :title %>
<%= f.label :opinion %>
<%= f.text_area :body %>
<%= f.submit "Update Book", class: "btn-success" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>

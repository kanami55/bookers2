<div class="container mt-4">
  <div class="row">
    <!--パーシャル-->
    <%= render "users/side", new_book: @new_book, user: @book.user %>
    <div class="right col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image, size: "50x50" %><br>
              <%= @book.user.name %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= render "likes/like", book: @book %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger",data: { confirm: '本当に消してもよろしいでしょうか？' } %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= render "comments/comment", book: @book, comment: @comment %>
      <%= render "comments/comment_form", book: @book, comment: @comment %>
    </div>
  </div>
</div>
